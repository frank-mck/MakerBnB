<head>
<title>MakersBnB</title>
 <link rel="icon" href="https://i.imgur.com/nDkbAZs.png">
 <!-- Font -->
 <link rel="preconnect" href="https://fonts.googleapis.com">
 <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
 <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,wght@0,200;0,300;0,400;0,700;1,200;1,300;1,400;1,700;1,800;1,900&display=swap" rel="stylesheet">
 
<!--  Bootstrap -->
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
 
  <!-- CSS file -->
 <link rel="stylesheet" href="style.css">

<!-- favcon icon -->
 <script src="https://kit.fontawesome.com/78b204e6a3.js" crossorigin="anonymous"></script>
</head>
 
 
<body>
<!-- NavBar -->
<nav class="navbar ">
   <div class="container">
     <a class="navbar-brand" href="/"> 
       <img src="https://i.imgur.com/IdpwQZw.png" alt="MakersBnB" width="30" height="24"> 
     </a>
     <span class="navbar-text">
      MakersBnB
    </span>
     <button class ='btn nav-btn' type ='submit' name ='log_out' value ='Log out'>Log out</button>
    
   </div>
 </nav>
<div class="modal-body row">

  <section>
<div class="container">
<div class="float-md-center">
  <div class="jumbotron ">
  <p class="nav-guest display-4"> Hello, <%= @user.guest_name %>! </p> 
    <h2 class="display-4">Where are we taking you next?</h2>
  <form class ='available ' action ='/spaces/availability' method ='post' >
      <input class ='date btn-list' type ='date' name ='start_date' required>
      <input class ='date btn-list' type ='date' name ='finish_date' required>
      <button class="btn-list" type ='submit' name ='available' value ='Check availability'>Check availability</button>
    </form>

  <form  action="/spaces/new" method="get">
    <button class="btn-list" type="submit" value="List a space" >List a space</button>
    </form>

    <form action ='/spaces/all' method ='post' >
      <button class="btn-list" type ='submit' name ='listing' value ='View all spaces'>View all spaces</button>
    </form>
    </section>

    <% if params[:available] %>
      <% @available.each do |space| %>
        <div class ='listing'>
        <div class ='image'>image of property</div>
        <div class ='main_info'>
          <span class ='name'><%= space.name %></span>
          <span class ='description'><%=space.description%></span>
          <p class ='host'>Hosted by <%= space.guest_id %></p>
          <span class ='price'>£<%=space.price%> per night</span>
          <span class ='availability'>Available from <b><%=space.start_date%></b> to <b><%=space.finish_date%></b></span>
        </div>
      </div>
      <%end%>
    <%end%>

    <% if params[:listing] %>
    <% @listing.each do |space| %>
    <div class ='listing'>
      <div class ='image'>image of property</div>
      <div class ='main_info'>
        <span class ='name'><%= space.name %></span>
        <span class ='description'><%= space.description %></span>
        <p class ='host'>Hosted by <%= space.guest_id %></p>
        <span class ='price'>£<%=space.price%> per night</span>
        <span class ='availability'>Available from <b><%=space.start_date%></b> to <b><%=space.finish_date%></b></span>
      </div>
    </div>
    <%end%>
    <%end%>
  </div>
  </div>

  <!-- footer -->

 



  <!-- End -->

</body>
  